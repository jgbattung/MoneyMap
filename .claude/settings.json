{
  "permissions": {
    "allow": [
      "Bash(npm *)",
      "Bash(npx prisma generate*)",
      "Bash(npx prisma validate*)",
      "Bash(npx prisma format*)",
      "Bash(npx prisma studio*)",
      "Bash(git status*)",
      "Bash(git log*)",
      "Bash(git diff*)",
      "Bash(git branch*)",
      "Bash(git add *)",
      "Bash(git checkout *)",
      "Bash(git fetch*)",
      "Bash(git pull*)",
      "Bash(gh pr view*)",
      "Bash(gh pr list*)",
      "Bash(gh issue view*)"
    ],
    "ask": [
      "Bash(git push*)",
      "Bash(git reset*)",
      "Bash(rm *)"
    ],
    "deny": [
      "Bash(sudo *)",
      "Bash(git push --force*)",
      "Bash(git push -f *)",
      "Read(.env*)",
      "Bash(npx prisma migrate*)",
      "Bash(npx prisma db push*)",
      "Bash(npx prisma db seed*)",
      "Bash(npx prisma db reset*)",
      "Bash(prisma migrate*)",
      "Bash(prisma db push*)",
      "Bash(prisma db seed*)",
      "Bash(prisma db reset*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-bash-guard.sh"
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-merge-check.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-edit-protect-sensitive.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/stop-secret-scan.sh"
          }
        ]
      }
    ]
  }
}